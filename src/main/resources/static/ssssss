[32m+[m[32mpackage com.chat.service;[m
[32m+[m
[32m+[m[32mimport com.chat.model.dto.MessageRequest;[m
[32m+[m[32mimport com.chat.repository.MessageRepository;[m
[32m+[m[32mimport org.springframework.beans.factory.annotation.Autowired;[m
[32m+[m
[32m+[m[32mimport static com.chat.util.builder.MessageDtoMapper.messageBuilder;[m
[32m+[m
[32m+[m[32mpublic class MessageService {[m
[32m+[m
[32m+[m[32m    @Autowired[m
[32m+[m[32m    UserService userService;[m
[32m+[m
[32m+[m[32m    @Autowired[m
[32m+[m[32m    MessageRepository messageRepository;[m
[32m+[m
[32m+[m[32m    public boolean sendMessage(MessageRequest message){[m
[32m+[m[32m        if(userService.isSenderPresent(message.getSender())){[m
[32m+[m[32m            if(userService.isReceiverPresent(message.getReceiver())){[m
[32m+[m[32m                messageRepository.save(messageBuilder(message));[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m        return false;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m}[m
[1mdiff --git a/src/main/java/com/chat/service/UserService.java b/src/main/java/com/chat/service/UserService.java[m
[1mnew file mode 100644[m
[1mindex 0000000..a4fb67c[m
[1m--- /dev/null[m
[1m+++ b/src/main/java/com/chat/service/UserService.java[m
[36m@@ -0,0 +1,61 @@[m
[32m+[m[32mpackage com.chat.service;[m
[32m+[m
[32m+[m[32mimport com.chat.model.User;[m
[32m+[m[32mimport com.chat.repository.UserRepository;[m
[32m+[m[32mimport com.chat.util.Exception.UserAlreadyExistException;[m
[32m+[m[32mimport com.chat.util.Exception.UserCredentialsIncorrectException;[m
[32m+[m[32mimport com.chat.util.Exception.UserNotFoundException;[m
[32m+[m[32mimport org.springframework.beans.factory.annotation.Autowired;[m
[32m+[m[32mimport org.springframework.stereotype.Service;[m
[32m+[m
[32m+[m[32mimport java.util.Optional;[m
[32m+[m
[32m+[m[32mimport static com.chat.util.constants.Constants.*;[m
[32m+[m
[32m+[m
[32m+[m[32m@Service[m
[32m+[m[32mpublic class UserService {[m
[32m+[m
[32m+[m[32m    @Autowired[m
[32m+[m[32m    UserRepository userRepository;[m
[32m+[m
[32m+[m[32m    public User registerUser(User user){[m
[32m+[m
[32m+[m[32m        // check if any user already exist with same name and email[m
[32m+[m[32m        Optional<User> existing = userRepository.findByNameAndEmail(user.getName(), user.getEmail());[m
[32m+[m[32m        if(existing.isPresent()){[m
[32m+[m[32m            throw new UserAlreadyExistException(userExist);[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        //save user to the database[m
[32m+[m[32m        return userRepository.save(user);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public User loginUser(User user){[m
[32m+[m[32m        Optional<User> existingUser = userRepository.findByName(user.getName());[m
[32m+[m[32m        if(existingUser.isEmpty()) {[m
[32m+[m[32m            throw new UserNotFoundException(userNotFound);[m
[32m+[m[32m        }[m
[32m+[m[32m        if(!user.getPassword().equals(existingUser.get().getPassword())){[m
[32m+[m[32m            throw new UserCredentialsIncorrectException(incorrectCredentials);[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        return existingUser.get();[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public boolean isSenderPresent(String name){[m
[32m+[m[32m        Optional<User> existingUser = userRepository.findByName(name);[m
[32m+[m[32m        if(existingUser.isEmpty()){[m
[32m+[m[32m            throw new UserNotFoundException(userNotFound);[m
[32m+[m[32m        }[m
[32m+[m[32m        return true;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public boolean isReceiverPresent(String name){[m
[32m+[m[32m        Optional<User> existingUser = userRepository.findByName(name);[m
[32m+[m[32m        if(existingUser.isEmpty()){[m
[32m+[m[32m            throw new UserNotFoundException(userNotFound);[m
[32m+[m[32m        }[m
[32m+[m[32m        return true;[m
[32m+[m[32m    }[m
[32m+[m[32m}[m

[32m+[m[32m    public String hello(){[m
[32m+[m[32m        System.out.println("Hello");[m
[32m+[m[32m        return "Hello";[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    @PostMapping("/register")[m
[32m+[m[32m    public ResponseEntity<String> registerUser(@RequestBody User user){[m
[32m+[m[32m        System.out.println("register");[m
[32m+[m[32m        try {[m
[32m+[m[32m            userService.registerUser(user);[m
[32m+[m[32m            return ResponseEntity.ok().body("created successfully");[m
[32m+[m[32m        } catch (UserAlreadyExistException e) {[m
[32m+[m[32m            return ResponseEntity.badRequest().body(e.getMessage());[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    @PostMapping("/login")[m
[32m+[m[32m    public ResponseEntity<String> loginUser(@RequestBody User user){[m
[32m+[m[32m        try{[m
[32m+[m[32m            userService.loginUser(user);[m
[32m+[m[32m            return ResponseEntity.ok().body("logged in successfully!");[m
[32m+[m[32m        }catch (UserCredentialsIncorrectException e){[m
[32m+[m[32m            return ResponseEntity.badRequest().body(e.getMessage());[m
[32m+[m[32m        }catch (UserNotFoundException e){[m
[32m+[m[32m            return ResponseEntity.notFound().build();[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m

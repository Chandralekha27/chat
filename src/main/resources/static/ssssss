[36m@@ -0,0 +1,17 @@[m
[32m+[m[32mpackage com.chat.util.builder;[m
[32m+[m
[32m+[m[32mimport com.chat.model.Message;[m
[32m+[m[32mimport com.chat.model.dto.MessageRequest;[m
[32m+[m
[32m+[m[32mimport java.util.Date;[m
[32m+[m
[32m+[m[32mpublic class MessageDtoMapper {[m
[32m+[m[32m    public static Message messageBuilder(MessageRequest message) {[m
[32m+[m[32m        Message sendMessage = new Message();[m
[32m+[m[32m        sendMessage.setContent(message.getContent());[m
[32m+[m[32m        sendMessage.setSender(message.getSender());[m
[32m+[m[32m        sendMessage.setReceiver(message.getReceiver());[m
[32m+[m[32m        sendMessage.setTimestamp(new Date());[m
[32m+[m[32m        return sendMessage;[m
[32m+[m[32m    }[m
[32m+[m[32m}[m

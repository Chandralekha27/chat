[32m+[m
[32m+[m[32mimport com.chat.model.User;[m
[32m+[m[32mimport org.springframework.data.mongodb.repository.MongoRepository;[m
[32m+[m[32mimport org.springframework.stereotype.Repository;[m
[32m+[m
